<p>
  <a href="#", data-reveal-id="checkout-modal">Checkout
</p>

<div class="row">
  <%= render partial: 'recipes/recipe', collection: @basket %>
</div>

<!-- Checkout modal -->
<div id="checkout-modal" class="reveal-modal medium">
  <h2>Your Grocery List</h2>
  <p class="lead"></p>
  <ul>
    <% @basket.each do |recipe| %>
      <% recipe.ingredients.each do |ingredient| %>
        <li><%= ingredient.amount_to_buy %> <%= ingredient.product.name %> <%= ingredient.product.price %></li>
      <% end %>
    <% end %>
  </ul>
  <h5>Total: $<%= current_user.total(@basket) %> </h5>
  <a href="#" class="medium button">Buy</a>
  <a class="close-reveal-modal">&#215;</a>
</div>
