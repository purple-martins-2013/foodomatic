<p>
  <a href="#", data-reveal-id="checkout-modal">Checkout
</p>

<div class="row">
  <%= render partial: 'recipes/recipe', collection: @basket %>
</div>

<!-- Checkout modal -->
<div id="checkout-modal" class="reveal-modal medium">
  <h2>Your Grocery List</h2>
  <p class="lead"></p>
  <ul>
    <% @grocery_list.list.each do |product_id, amount| %>
      <% product = Product.find(product_id) %>
      <li><%= amount.ceil %> <%= product.name %> <%= number_to_currency(product.price) %></li>
    <% end %>
  </ul>
  <h5>Total: <%= number_to_currency(@grocery_list.total) %> </h5>
  <a href="#" class="medium button">Buy</a>
  <a class="close-reveal-modal">&#215;</a>
</div>
