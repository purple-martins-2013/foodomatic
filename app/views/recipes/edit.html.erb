<div  id="new-recipe-form">
  <h1>Editing <%= @recipe.title %></h1>
  <%= render 'form' %>

  <h2>Add Ingredients</h2>
  <%= render partial: 'recipes/recipe_ingredients', locals: { recipe: @recipe } %>
  <%= form_for [@recipe, @ingredient] do |f| %>
    <%= f.number_field :required_amount, min: "1", class: "new-recipe-amount tiny radius" %>
    <%= f.collection_select :product_id, @products, :id, :name_with_amount_type, id: "ingredient_product_id" %>
    <%= f.submit %>
  <% end %>
</div>