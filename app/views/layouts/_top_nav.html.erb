<div class="fixed">
  <nav class="top-bar">

    <ul class="title-area">
      <li class="name" id="grocer-logo">
        <h1><%= link_to "#{image_tag("sugar_snap.png")} Grocer Ease!".html_safe, root_path %></h1>
      </li>
      <li class="toggle-topbar menu-icon"><%= link_to 'Menu', '#' %></li>
    </ul>

    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        <li class="divider"></li>
        <li class="has-form nav-bar-coloring">
          <%= form_tag root_path, method: 'get' do %>
            <div class="row collapse">
              <div class="small-8 columns">
                <%= text_field_tag :search, params[:search] %>
              </div>
              <div class="small-4 columns">
                <%= submit_tag "Search", class: "button" %>
              </div>
            </div>
          <% end %>
        </li>

        <li class="divider"></li>

        <% if user_signed_in? %>
          <%= render partial: 'layouts/top_nav_signed_in' %>
        <% else %>
          <%= render partial: 'layouts/top_nav_signed_out' %>
        <% end %>

      </ul>
    </section>
  </nav>
</div>
