<h3>Your Queued Recipes</h3>

<ol class="sortable">
  <% @queued_recipes.each do |queued_recipe| %>
    <li id="queued_recipe_<%= queued_recipe.id %>"><span class="handle"><%= queued_recipe.recipe.title %></span><%= button_to "Remove", { action: "destroy", id: queued_recipe.id }, method: :delete, class: "tiny button remove-from-queue" %></li>
  <% end %>
</ol>
